<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="code.aroundme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppDesign">

        <activity android:name="code.aroundme.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="code.aroundme.DetailActivity"
            android:parentActivityName="code.aroundme.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="code.aroundme.MainActivity" />
        </activity>

    </application>

</manifest>
